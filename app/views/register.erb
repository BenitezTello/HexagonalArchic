<!-- app/views/register.erb -->

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Registrarse - ABT Zone</title>
  <!-- Bootstrap CSS y Font Awesome ya incluidos en layout.erb -->
</head>
<body>
  <div class="container form-container">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="form-card">
         
          
          <h3 class="text-center mb-4">Registrarse</h3>
          
          <!-- Mensajes Flash de Error -->
          <% if flash[:error] %>
            <div class="alert alert-danger" role="alert">
              <%= flash[:error] %>
            </div>
          <% end %>
          
          <!-- Formulario de Registro -->
          <form action="/register" method="POST">
            <!-- Nombre de Usuario -->
            <div class="form-group">
              <i class="fa fa-user"></i>
              <input type="text" name="username" class="form-control" placeholder="Nombre de Usuario" required aria-label="Nombre de Usuario">
            </div>
            
            <!-- Contraseña -->
            <div class="form-group">
              <i class="fa fa-lock"></i>
              <input type="password" name="password" class="form-control" placeholder="Contraseña" required aria-label="Contraseña">
            </div>
            
            <!-- Confirmar Contraseña (Opcional pero Recomendado) -->
            <div class="form-group">
              <i class="fa fa-lock"></i>
              <input type="password" name="password_confirmation" class="form-control" placeholder="Confirmar Contraseña" required aria-label="Confirmar Contraseña">
            </div>
            
            <!-- Botón de Envío -->
            <button type="submit" class="btn btn-primary">Registrarse</button>
          </form>
          
          <!-- Enlace para Volver al Inicio de Sesión -->
          <p class="mt-3 text-center">
            ¿Ya tienes una cuenta? <a href="/login" class="text-secondary">Inicia sesión aquí</a>.
          </p>
        </div>
      </div>
    </div>
  </div>

