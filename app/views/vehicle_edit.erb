<!-- vehicle_edit.erb -->
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Editar Vehículo</title>
</head>
<body>
  <h2>Editar Vehículo</h2>
  <form action="/vehicles/<%= @vehicle.id %>" method="POST" enctype="multipart/form-data">
    <label for="brand">Marca:</label>
    <input type="text" id="brand" name="brand" value="<%= @vehicle.brand %>" required><br>

    <label for="model">Modelo:</label>
    <input type="text" id="model" name="model" value="<%= @vehicle.model %>" required><br>

    <label for="year">Año:</label>
    <input type="number" id="year" name="year" value="<%= @vehicle.year %>" required><br>

    <label for="price">Precio:</label>
    <input type="number" id="price" name="price" value="<%= @vehicle.price %>" required><br>

    <% if @vehicle.image_url %>
      <p>Imagen Actual:</p>
      <img src="<%= @vehicle.image_url %>" alt="Imagen del Vehículo" width="200"><br>
    <% end %>

    <label for="image">Cambiar Imagen:</label>
    <input type="file" id="image" name="image"><br>

    <button type="submit">Actualizar Vehículo</button>
  </form>
</body>
</html>
