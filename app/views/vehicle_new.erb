<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Crear Vehículo - ABT Zone</title>
  <!-- Bootstrap CSS y Font Awesome ya incluidos en layout.erb -->
</head>
<body>
  <div class="container form-container">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="form-card">
          <!-- Título del Formulario -->
          <h3 class="text-center mb-4">Crear Nuevo Vehículo</h3>
          
          <!-- Formulario de Creación de Vehículo -->
          <form action="/vehicles" method="POST" enctype="multipart/form-data">
            <!-- Marca -->
            <div class="form-group">
              <i class="fa fa-car"></i>
              <input type="text" name="brand" class="form-control" placeholder="Marca" required>
            </div>
            
            <!-- Modelo -->
            <div class="form-group">
              <i class="fa fa-cogs"></i>
              <input type="text" name="model" class="form-control" placeholder="Modelo" required>
            </div>
            
            <!-- Año -->
            <div class="form-group">
              <i class="fa fa-calendar-alt"></i>
              <input type="number" name="year" class="form-control" placeholder="Año" required min="1900" max="<%= Time.now.year + 1 %>">
            </div>
            
            <!-- Precio -->
            <div class="form-group">
              <i class="fa fa-dollar-sign"></i>
              <input type="number" step="0.01" name="price" class="form-control" placeholder="Precio" required min="0">
            </div>
            
            <!-- Imagen -->
            <div class="form-group">
              <i class="fa fa-image"></i>
              <input type="file" name="image" class="form-control-file" accept=".jpg, .jpeg, .png, .gif">
            </div>
            
            <!-- Botón de Envío -->
            <button type="submit" class="btn btn-primary">Crear Vehículo</button>
          </form>
          
          <!-- Enlace para Cancelar -->
          <p class="mt-3 text-center">
            <a href="/vehicles" class="text-secondary">Volver al Dashboard</a>
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS y dependencias ya incluidos en layout.erb -->
</body>
</html>
